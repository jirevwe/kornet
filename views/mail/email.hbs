<div class="container">
    <a href="/mail/reply/{{message._id}}" class="btn btn-default">Reply</a>
    <a href="/mail/trash/{{message._id}}" class="btn btn-default">Move to Trash</a>
    <div class="list-group">
        <div href="/mail/{{message._id}}" class="list-group-item">
            <h4 class="list-group-item-heading">{{message.subject}}</h4>
            {{# if_eq messages.mailbox 'Inbox'}}
            <p class="list-group-item-text">From: {{message.from.text}}</p>
            {{else}}
            <p class="list-group-item-text">To: {{message.to.text}}</p>
            {{/if_eq}}
            <p class="list-group-item-text">Date: {{message.date}}</p>
            <br>
            <div class="list-group-item-text container" id="text">
                {{# if message.html }}
                    <p>{{{message.html}}}</p>
                {{else}}
                    <p>{{message.text}}</p>
                {{/if}}
            </div>
            <div class="container">
                <div id="attachments" class="list-group"></div>
            </div>
        </div>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script>
    $(document).ready(() => {
        let loaded = false;
        var socketio = io.connect();

        String.prototype.getExtension = function() {
            var basename = this.split(/[\\/]/).pop(),  // extract file name from full path ...
                                                    // (supports `\\` and `/` separators)
                pos = basename.lastIndexOf(".");       // get last position of `.`

            if (basename === "" || pos < 1)            // if file name is empty or ...
                return "";                             //  `.` not found (-1) or comes first (0)

            return basename.slice(pos + 1);            // extract extension ignoring `.`
        };

        let word  = '<img class="icon icons8-Microsoft-Word" src="data:image/png;base64," width="24" height="24">'
        let pdf   = '<img class="icon icons8-PDF" src="data:image/png;base64," width="24" height="24">'
        let csv   = '<img class="icon icons8-CSV" src="data:image/png;base64," width="24" height="24">'
        let excel = '<img class="icon icons8-Microsoft-Excel" src="data:image/png;base64," width="24" height="24">'

        if(!loaded){
            socketio.on("imap_end_attachment", function(data) {
                let html =  $('#attachments').html();
                for(index in data['content']){
                    let ext = data['content'][index]['name'].getExtension();
                    if(ext == 'png' || ext == 'gif' || ext == 'jpg' || ext == 'jpeg'){
                        html += '<span><a href="' + data['content'][index]['link'] +'"><img src="' + data['content'][index]['link'] +'"width="64" height="64" /></a></span><br>';
                    }else if(ext == 'pdf'){
                        html += '<span><a href="' + data['content'][index]['link'] +'">' + pdf + data['content'][index]['name'] +'</a></span><br>';
                    }else if(ext == 'docx' || ext == 'doc'){
                        html += '<span><a href="' + data['content'][index]['link'] +'">' + word + data['content'][index]['name'] +'</a></span><br>';
                    }else if(ext == 'xls' || ext == 'xlsx'){
                        html += '<span><a href="' + data['content'][index]['link'] +'">' + excel + data['content'][index]['name'] +'</a></span><br>';
                    }
                }
                $('#attachments').html(html);
            });


            let xhr = $.ajax({
                url: "http://localhost:3000/mail/mail-body/{{message._id}}",
                type: "GET",
                success: function(data, txt_stat, jq_xhr){
                    console.log(data);
                    loaded = true;
                },
                error: function(response){
                    console.log("Error: " + JSON.stringify(response));
                }
            });

            let fn = () =>
            {
                if(xhr != undefined && xhr.readyState != 4){
                    xhr.abort();
                }
            };
            setInterval(fn, 500);
        }
    });
</script>