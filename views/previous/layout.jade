doctype html
html(lang='en')
	head
		title= title
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='')
		meta(name='author', content='')

		link(href='/stylesheets/bootstrap.min.css', rel='stylesheet', media='screen')
		link(href='/stylesheets/main.css', rel='stylesheet', media='screen')
		link(href='/stylesheets/font-awesome.min.css', rel='stylesheet', media='screen')
		link(rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css")
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/css/bootstrap-select.min.css')
		
		script(src='/javascripts/bootstrap.min.js')
		script(src='/javascripts/mail.js')
		
		script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/js/bootstrap-select.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/js/i18n/defaults-*.min.js')

		script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
		script(src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js")
		script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js")
		
		script(src="/javascripts/tinymce/tinymce.min.js")
		script(type='text/javascript').
			tinymce.init({
				selector: 'textarea'
			});
	body
		#wrapper
			#sidebar-wrapper
				ul.sidebar-nav
					li.sidebar-brand
					if (user)
						#{user.username}
					else
						p Some Web Mail Client
					li
						a(href='/') Home
					if (user || messages)
						li
							a(href='/users/inbox') Inbox
						li
							a(href='/users/sent') Sent
						li
							a(href='/users/drafts') Drafts
						li
							a(href='/users/trash') Trash
						li
							a(href='/users/refresh/inbox') Refresh Inbox
						li
							a(href='/users/refresh/sent') Refresh Sent
						li
							a(href='/users/refresh/drafts') Refresh Drafts
						li
							a(href='/users/refresh/trash') Refresh Trash
			.container
				block content
